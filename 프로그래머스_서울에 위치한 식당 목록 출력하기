SELECT RI.REST_ID, 
    RI.REST_NAME,
    RI.FOOD_TYPE,
    RI.FAVORITES,
    RI.ADDRESS,
    ROUND(AVG(RR.REVIEW_SCORE), 2) AS SCORE
FROM REST_INFO RI
JOIN REST_REVIEW RR -- LEFT나 FULL JOIN 사용시 SCORE가 NULL인 행이 들어옴
ON RI.REST_ID = RR.REST_ID
WHERE ADDRESS LIKE '서울%' -- '%서울%' 입력시 오답
GROUP BY RI.REST_ID, 
    RI.REST_NAME,
    RI.FOOD_TYPE,
    RI.FAVORITES,
    RI.ADDRESS
ORDER BY 6 DESC, 4 DESC
